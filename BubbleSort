void BubbleSort(int* a, int n)
{
	int i = 0;
	int j = 0;
	for (i=0; i < (n - 1); i++)
	{
		int flag = 0;
		for (j = 0; j< n-i-1; j++)
		{
			if (a[j] > a[j+1])
			{
				int val = 0;
				val = a[j];
				a[j] = a[j+1];
				a[j+1] = val;
				flag = 0;

			}
		
		}
		if (flag = 0)
		{
			break;
		}

	}

}
